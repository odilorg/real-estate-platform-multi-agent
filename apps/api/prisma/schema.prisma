generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Note: SQLite doesn't support native enums, so we use String with defaults
// The application layer will enforce enum constraints

model User {
  id            String     @id @default(uuid())
  email         String     @unique
  passwordHash  String
  firstName     String?
  lastName      String?
  phone         String?
  role          String     @default("USER") // USER, AGENT, ADMIN
  status        String     @default("ACTIVE") // ACTIVE, SUSPENDED, PENDING_VERIFICATION
  emailVerified Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  refreshTokens RefreshToken[]
  listings      Listing[]
  favorites     Favorite[]

  @@index([email])
  @@index([role])
  @@index([status])
  @@map("users")
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@index([expiresAt])
  @@map("refresh_tokens")
}

model Listing {
  id            String         @id @default(uuid())
  ownerId       String
  owner         User           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  propertyType  String         // APARTMENT, HOUSE, TOWNHOUSE, COMMERCIAL, LAND, GARAGE
  dealType      String         // SALE, RENT, DAILY_RENT
  status        String         @default("DRAFT") // DRAFT, PENDING, ACTIVE, SOLD, RENTED, ARCHIVED, REJECTED

  // Multilingual fields stored as JSON strings
  title         String         // JSON: {"en": "...", "ru": "...", "uz": "..."}
  description   String         // JSON: {"en": "...", "ru": "...", "uz": "..."}

  city          String
  district      String?
  address       String?
  latitude      Float?
  longitude     Float?
  price         Float
  currency      String         @default("UZS")
  area          Float?
  rooms         Int?
  bedrooms      Int?
  bathrooms     Int?
  floor         Int?
  totalFloors   Int?

  // Features stored as JSON string
  features      String?        // JSON: ["feature1", "feature2", ...]

  viewCount     Int            @default(0)
  favoriteCount Int            @default(0)
  images        ListingImage[]
  favorites     Favorite[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  publishedAt   DateTime?

  @@index([ownerId])
  @@index([propertyType])
  @@index([dealType])
  @@index([status])
  @@index([city])
  @@index([price])
  @@index([rooms])
  @@index([createdAt])
  @@index([publishedAt])
  @@map("listings")
}

model ListingImage {
  id           String   @id @default(uuid())
  listingId    String
  listing      Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  url          String
  thumbnailUrl String?
  caption      String?
  order        Int      @default(0)
  createdAt    DateTime @default(now())

  @@index([listingId])
  @@index([order])
  @@map("listing_images")
}

model Favorite {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, listingId])
  @@index([userId])
  @@index([listingId])
  @@map("favorites")
}
